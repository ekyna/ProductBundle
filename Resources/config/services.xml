<?xml version="1.0" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ekyna_product.product.repository.class">Ekyna\Bundle\ProductBundle\Entity\ProductRepository</parameter>
        <parameter key="ekyna_product.product.search.class">Ekyna\Bundle\ProductBundle\Search\ProductSearch</parameter>

        <parameter key="ekyna_product.abstracts_maps_subscriber.class">Ekyna\Bundle\ProductBundle\Listener\AbstractsMapsSubscriber</parameter>

        <parameter key="ekyna_product.options.form_type.class">Ekyna\Bundle\ProductBundle\Form\Type\OptionsType</parameter>

        <parameter key="ekyna_product.twig.product_extension.class">Ekyna\Bundle\ProductBundle\Twig\ProductExtension</parameter>
        <parameter key="ekyna_product.twig.price_extension.class">Ekyna\Bundle\ProductBundle\Twig\PriceExtension</parameter>
    </parameters>

    <services>
        <!-- Product repository --> 
        <service
            id="ekyna_product.product.repository"
            class="%ekyna_product.product.repository.class%"
            factory-service="doctrine.orm.entity_manager"
            factory-method="getRepository">
            <argument>EkynaProductBundle:AbstractProduct</argument>
        </service>
 
        <!-- Product Search --> 
        <service id="ekyna_product.product.search" class="%ekyna_product.product.search.class%">
            <argument type="service" id="ekyna_product.product.repository" />
            <argument>6</argument>
        </service>

        <!-- Doctrine subscriber -->
        <service id="ekyna_product.abstracts_maps_subscriber" class="%ekyna_product.abstracts_maps_subscriber.class%">
            <argument>%ekyna_product.options_classes_map%</argument>
            <argument>%ekyna_product.products_classes_map%</argument>
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

        <!-- Form Types -->
        <service id="ekyna_product.options.form_type" class="%ekyna_product.options.form_type.class%">
            <argument>%ekyna_product.options.configuration%</argument>
            <tag name="form.type" alias="ekyna_product_options" />
        </service>

        <!-- Twig Extensions -->
        <service id="ekyna_product.twig.product_extension" class="%ekyna_product.twig.product_extension.class%">
            <argument>%ekyna_product.options.configuration%</argument>
            <tag name="twig.extension" alias="ekyna_product" />
        </service>
        <service id="ekyna_product.twig.price_extension" class="%ekyna_product.twig.price_extension.class%">
            <tag name="twig.extension" alias="ekyna_price" />
        </service>
    </services>

</container>
