<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
        name="Ekyna\Bundle\ProductBundle\Entity\AbstractProduct"
        table="prod_product"
        repository-class="Ekyna\Bundle\ProductBundle\Entity\ProductRepository"
        inheritance-type="JOINED">

        <discriminator-column name="class" type="string" />
        <discriminator-map />

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="type" column="type" type="string" length="16" />
        <field name="designation" column="designation" type="string" length="255" unique="true" />
        <field name="reference" column="reference" type="string" length="32" unique="true" />
        <field name="price" column="price" type="decimal" precision="10" scale="5" />
        <field name="weight" column="weight" type="integer" />
        <field name="slug" column="slug" type="string" length="64" unique="true">
            <gedmo:slug unique="true" updatable="false" fields="designation" />
        </field>
        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create" />
        </field>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update" />
        </field>
        <field name="deletedAt" column="deleted_at" type="datetime" nullable="true" />

        <one-to-many field="options" target-entity="Ekyna\Bundle\ProductBundle\Entity\AbstractOption" mapped-by="product" orphan-removal="true">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>
        <many-to-one field="tax" target-entity="Ekyna\Bundle\ProductBundle\Entity\Tax">
            <join-column name="tax_id" referenced-column-name="id" nullable="false" on-delete="RESTRICT" />
        </many-to-one>

        <gedmo:soft-deleteable field-name="deletedAt" />

    </entity>

</doctrine-mapping>