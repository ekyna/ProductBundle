<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\ProductBundle\Entity\Option" table="prod_option">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <many-to-one field="product" target-entity="Ekyna\Bundle\ProductBundle\Entity\AbstractProduct" inversed-by="options">
            <join-column name="product_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one field="group" target-entity="Ekyna\Bundle\ProductBundle\Entity\OptionGroup">
            <join-column name="group_id" referenced-column-name="id" />
        </many-to-one>

        <field name="designation" column="designation" type="string" length="255" />
        <field name="reference" column="reference" type="string" length="32" />

        <field name="price" column="price" type="decimal" precision="10" scale="5" />
        <field name="weight" column="weight" type="integer" />
        <many-to-one field="tax" target-entity="Ekyna\Bundle\ProductBundle\Entity\Tax">
            <join-column name="tax_id" referenced-column-name="id" />
        </many-to-one>

    </entity>

</doctrine-mapping>