<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Bundle\ProductBundle\Entity\Attribute"
            table="product_attribute">

        <indexes>
            <index columns="name" name="idx_attribute_name" />
        </indexes>

        <unique-constraints>
            <unique-constraint columns="name" name="unique_attribute_name" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" column="name" type="string" length="32" nullable="false" unique="true"/>

        <many-to-one target-entity="Ekyna\Bundle\ProductBundle\Model\AttributeGroupInterface"
                     field="group" inversed-by="attributes">
            <join-column name="group_id" referenced-column-name="id" on-delete="RESTRICT" nullable="false"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
