{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_product.category.header.show'|trans({'%name%': category.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{% if cms_content_enabled %}
{{ ui_link(path('ekyna_product_category_admin_content', identifiers|merge({'categoryId': category.id})), 'ekyna_core.button.content', 'default', 'sm', 'th-large') }}
{% endif %}
{{ ui_link(path('ekyna_product_category_admin_list', identifiers), 'ekyna_core.button.back_to_list', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_product_category_admin_new', identifiers), 'ekyna_product.category.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ ui_link(path('ekyna_product_category_admin_edit', identifiers|merge({'categoryId': category.id})), 'ekyna_core.button.edit', 'warning', 'sm', 'pencil') }}
    {{ ui_link(path('ekyna_product_category_admin_remove', identifiers|merge({'categoryId': category.id})), 'ekyna_core.button.remove', 'danger', 'sm', 'trash') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#prod-category-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
        <li><a href="#prod-category-seo" data-toggle="tab">{{ 'ekyna_core.field.seo'|trans }}</a></li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="prod-category-general">
                {{ show_row(category.name, 'text', 'ekyna_core.field.name') }}
                {{ show_row(category.image, 'image', 'ekyna_core.field.image') }}
                {% if not cms_content_enabled %}
                {{ show_row(path('ekyna_product_category_admin_tinymce', identifiers|merge({'categoryId': category.id})), 'tinymce', 'ekyna_core.field.content') }}
                {% endif %}
            </div>
            <div class="tab-pane" id="prod-category-seo">
                {{ show_row(category.seo.title, 'text', 'ekyna_core.field.title') }}
                {{ show_row(category.seo.description, 'text', 'ekyna_core.field.description') }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(category.seo.changefreq, 'text', 'ekyna_core.field.changefreq', {'label_nb_col': 4}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(category.seo.priority, 'text', 'ekyna_core.field.priority', {'label_nb_col': 4}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block side %}
{% endblock %}