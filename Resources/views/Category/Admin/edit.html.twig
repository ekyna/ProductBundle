{% endblock %}

{% block actions %}
{{ admin_resource_btn(category, 'list') }}
{{ admin_resource_btn(category, 'new') }}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_product_category_admin_edit', identifiers|merge({'categoryId': category.id})) }}" {{ form_enctype(form) }} method="post" class="form-horizontal form-with-tabs">
    {% include "EkynaProductBundle:Category/Admin:_form.html.twig" %}
    {{ ui_form_footer(form) }}
</form>
{% endblock %}

