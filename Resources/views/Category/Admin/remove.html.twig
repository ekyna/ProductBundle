{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_product.category.header.remove'|trans({'%name%': category.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(category, 'list') }}
{{ admin_resource_btn(category, 'new') }}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_product_category_admin_remove', identifiers|merge({'categoryId': category.id})) }}" {{ form_enctype(form) }} method="post" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
		{{ form_widget(form) }}
    </div>
    {{ ui_form_footer(form) }}
</form>
{% endblock %}

{% block side %}
{% endblock %}