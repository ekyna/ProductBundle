{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_product.optionGroup.header.show'|trans({'%name%': optionGroup.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_product_optionGroup_admin_list'), 'ekyna_core.button.back_to_list', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_product_optionGroup_admin_new'), 'ekyna_product.optionGroup.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ ui_link(path('ekyna_product_optionGroup_admin_edit', {'optionGroupId': optionGroup.id}), 'ekyna_core.button.edit', 'warning', 'sm', 'pencil') }}
    {{ ui_link(path('ekyna_product_optionGroup_admin_remove', {'optionGroupId': optionGroup.id}), 'ekyna_core.button.remove', 'danger', 'sm', 'trash') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#prod-optionGroup-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="prod-optionGroup-general">
		      {{ show_row(optionGroup.name, null, 'ekyna_core.field.name') }}
		    </div>
	    </div>
	</div>
</div>
{% endblock %}

{% block side %}
{% endblock %}