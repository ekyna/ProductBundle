{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_product.optionGroup.header.remove'|trans({'%name%': optionGroup.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_product_optionGroup_admin_list'), 'ekyna_core.button.back_to_list', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_product_optionGroup_admin_new'), 'ekyna_product.optionGroup.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_product_optionGroup_admin_remove', {'optionGroupId': optionGroup.id}) }}" method="post" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
		{{ form_widget(form) }}
    </div>
    {{ ui_form_footer(path('ekyna_product_optionGroup_admin_show', {'optionGroupId': optionGroup.id}), 'ekyna_core.button.remove', 'danger') }}
</form>
{% endblock %}

{% block side %}
{% endblock %}