{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_product.tax.header.show'|trans({'%name%': tax.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_product_tax_admin_list'), 'ekyna_core.button.back_to_list', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_product_tax_admin_new'), 'ekyna_product.tax.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ ui_link(path('ekyna_product_tax_admin_edit', {'taxId': tax.id}), 'ekyna_core.button.edit', 'warning', 'sm', 'pencil') }}
    {{ ui_link(path('ekyna_product_tax_admin_remove', {'taxId': tax.id}), 'ekyna_core.button.remove', 'danger', 'sm', 'trash') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#prod-tax-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="prod-tax-general">
		      {{ show_row(tax.name, null, 'ekyna_core.field.name') }}
		      {{ show_row(tax.rate, null, 'ekyna_core.field.name') }}
		    </div>
	    </div>
	</div>
</div>
{% endblock %}

{% block side %}
{% endblock %}