<table class="table table-striped table-condensed">
    <thead>
    <tr>
        <th>{{ headers.quantity }}</th>
        <th>{{ headers.percent }}</th>
        <th>{{ headers.price }}</th>
    </tr>
    </thead>
    <tbody>
    {% for rule in rules %}
        <tr data-quantity="{{ rule.quantity }}" data-percent="{{ rule.percent }}">
            <td>{{ rule.label }}</td>
            <td>{{ rule.f_percent }}</td>
            <td>{{ rule.f_price }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
