{% extends '@EkynaAdmin/Entity/sided.html.twig' %}

{% block page_title %}{{ sale.number }} - {{ parent() }}{% endblock page_title %}

{% block title %}
    <h1>{{ 'ekyna_product.catalog.header.render_from_sale'|trans({'%number%': sale.number})|raw }}</h1>
{% endblock title %}

{% block actions %}
    {{ admin_resource_btn('ekyna_product_catalog', 'list') }}
    {{ admin_resource_btn('ekyna_product_catalog', 'new') }}
{% endblock actions %}

{% block main %}
    {{ form_start(form) }}
    <div class="form-body">
        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ bootstrap_set_label_col(3) }}
        {{ bootstrap_set_widget_col(9) }}
        {{ form_errors(form) }}
        {{ form_row(form.theme) }}
        {{ form_row(form.template) }}
        {{ form_row(form.saleItems) }}
        {{ form_row(form.save) }}
        {{ form_rest(form) }}
    </div>
    {{ form_end(form) }}
{% endblock main %}
