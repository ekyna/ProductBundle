{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% import "EkynaProductBundle:Admin/Product:_macro.html.twig" as macros %}

{% block title %}
    <h1>{{ 'ekyna_product.product.header.show'|trans({'%name%': product})|raw }}</h1>
{% endblock title %}

{% block actions %}
    {% if product is variant_product %}
        {{ ui_button('ekyna_product.product.field.parent', {
            'type': 'link',
            'icon': 'arrow-up',
            'path': admin_resource_path(product.parent)
        }) }}
    {% endif %}
    {{ admin_resource_btn(product, 'list') }}
    {{ macros.new_product_button() }}
{% endblock actions %}

{% block main %}
    <div class="actions">
        {{ admin_resource_btn(product, 'edit') }}
        {{ admin_resource_btn(product, 'remove') }}
    </div>
    {% if product is simple_product %}
        {% include 'EkynaProductBundle:Admin/Product/Show:simple.html.twig' %}
    {% elseif product is variable_product %}
        {% include 'EkynaProductBundle:Admin/Product/Show:variable.html.twig' %}
    {% elseif product is variant_product %}
        {% include 'EkynaProductBundle:Admin/Product/Show:variant.html.twig' %}
    {% elseif product is bundle_product %}
        {% include 'EkynaProductBundle:Admin/Product/Show:bundle.html.twig' %}
    {% elseif product is configurable_product %}
        {% include 'EkynaProductBundle:Admin/Product/Show:configurable.html.twig' %}
    {% else %}
        <div class="panel-body form-body">
            <p>Unexpected product type.</p>
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('bundles/ekynaproduct/css/show.css') }}" rel="stylesheet" type="text/css"/>
{% endblock stylesheets %}
