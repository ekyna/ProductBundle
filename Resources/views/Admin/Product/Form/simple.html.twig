{% extends '@EkynaProduct/Admin/Product/Form/base.html.twig' %}


{% block general_content %}
    {{ parent() }}
    {{ form_row(form.categories) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.brand, {'label_col': 4, 'widget_col': 8}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.releasedAt, {'label_col': 4, 'widget_col': 8}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.visible, {'label_col': 4, 'widget_col': 8}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.visibility, {'label_col': 4, 'widget_col': 8}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.bestSeller, {'label_col': 4, 'widget_col': 8}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.crossSelling, {'label_col': 4, 'widget_col': 8}) }}
        </div>
    </div>
    {{ form_row(form.attributeSet) }}
    {{ form_row(form.attributes) }}
    {{ form_row(form.tags) }}
{% endblock general_content %}


{% block pricing_content %}
    {{ parent() }}
    {{ form_row(form.references) }}
    {{ form_row(form.adjustments) }}
{% endblock pricing_content %}

