{% extends "EkynaProductBundle:Admin/Product/Show:base.html.twig" %}


{% import "EkynaProductBundle:Admin/Product/Show:_macro.html.twig" as macros %}
{% import "EkynaCmsBundle:Admin:show_macros.html.twig" as _cms %}


{% block general_content %}
    <div class="row">
        <div class="col-md-8">
            {{ macros.show_designation(product, {'label_nb_col': 3, 'widget_nb_col': 9}) }}
        </div>
        <div class="col-md-4">
            {{ macros.show_visible(product, {'label_nb_col': 6, 'widget_nb_col': 6}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ macros.show_variable(product, {'label_nb_col': 3, 'widget_nb_col': 9}) }}
        </div>
        <div class="col-md-4">
            {{ macros.show_released_at(product, {'label_nb_col': 6, 'widget_nb_col': 6}) }}
        </div>
    </div>
    {{ macros.show_attributes(product) }}
    {{ macros.show_translations(product) }}
    {{ macros.show_medias(product) }}
{% endblock general_content %}


{% block pricing_content %}
    {{ _cms.show_tags(product) }}
    {{ parent() }}
    <div class="row">
        <div class="col-md-8">
            {{ macros.show_customer_groups(product, {'label_nb_col': 3, 'widget_nb_col': 8}) }}
        </div>
        <div class="col-md-4">
            {{ macros.show_delivery_time(product, {'label_nb_col': 6, 'widget_nb_col': 6}) }}
        </div>
    </div>
    {{ macros.show_references(product) }}
    {{ macros.show_adjustments(product) }}
{% endblock pricing_content %}


{% block stock_content %}
    {{ parent() }}
    <hr>
    {{ macros.show_stock_units(product) }}
{% endblock stock_content %}


{% block seo_tab %}{% endblock seo_tab %}
{% block seo_pane %}{% endblock seo_pane %}
