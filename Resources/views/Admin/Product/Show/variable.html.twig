{% extends "EkynaProductBundle:Admin/Product/Show:base.html.twig" %}


{% import "EkynaProductBundle:Admin/Product/Show:_macro.html.twig" as macros %}


{% block general_content %}
    {{ parent() }}
    <div class="row">
        <div class="col-md-6">
            {{ macros.show_brand(product, {'label_nb_col': 4, 'widget_nb_col': 8}) }}
        </div>
        <div class="col-md-6">
            {{ macros.show_visible(product, {'label_nb_col': 4, 'widget_nb_col': 8}) }}
        </div>
    </div>
    {{ macros.show_categories(product) }}
    {{ macros.show_translations(product) }}
    {{ macros.show_attribute_set(product) }}
    {{ macros.show_medias(product) }}
{% endblock general_content %}


{% block stock_content %}
    <p>TODO</p> {# TODO #}
{% endblock stock_content %}


{% block children_content %}
    <div class="sub-header">
        <h2>{{ 'ekyna_product.variant.header.list'|trans|raw }}</h2>
    </div>
    <div class="actions">
        {{ admin_resource_btn('ekyna_product.product', 'new', {
            'label': 'ekyna_product.variant.button.new',
            'path': path('ekyna_product_product_admin_new', {
                'parent': product.id,
                'type': 'variant'
            })
        }) }}
    </div>
    {{ ekyna_table_render(variants) }}
{% endblock children_content %}
