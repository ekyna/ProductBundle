{% extends '@EkynaProduct/Admin/Product/Show/base.html.twig' %}


{% import '@EkynaProduct/Admin/Product/Show/_macro.html.twig' as macros %}
{% import '@EkynaCms/Admin/show_macros.html.twig' as _cms %}


{% block general_content %}
    {{ parent() }}
    {{ macros.show_categories(product) }}
    <div class="row">
        <div class="col-md-6">
            {{ macros.show_brand(product, {'label_col': 4}) }}
        </div>
        <div class="col-md-6">
            {{ macros.show_brandNaming(product, {'label_col': 4}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ macros.show_released_at(product, {'label_col': 6}) }}
        </div>
        <div class="col-md-4">
            {{ macros.show_visible(product, {'label_col': 6}) }}
        </div>
        <div class="col-md-4">
            {{ macros.show_visibility(product, {'label_col': 6}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ macros.show_best_seller(product, {'label_col': 4}) }}
        </div>
        <div class="col-md-6">
            {{ macros.show_cross_selling(product, {'label_col': 4}) }}
        </div>
    </div>
    {{ macros.show_cross_sellings(product) }}
    {{ macros.show_attribute_set(product) }}
    {{ macros.show_attributes(product) }}
    {{ _cms.show_tags(product) }}
{% endblock general_content %}


{% block pricing_content %}
    {{ parent() }}
    {{ macros.show_customer_groups(product) }}
    {{ macros.show_references(product) }}
    {{ macros.show_adjustments(product) }}
{% endblock pricing_content %}


{% block stock_content %}
    {{ parent() }}
    {{ macros.show_stock_units(product) }}
{% endblock stock_content %}
