{% extends '@EkynaProduct/Admin/Product/Show/base.html.twig' %}


{% import '@EkynaProduct/Admin/Product/Show/_macro.html.twig' as macros %}


{% block pricing_tab %}
    <li>
        <a href="#product-pricing" id="toggle-product-pricing" data-toggle="tab">
            {{- 'ekyna_product.product.field.composition'|trans -}}
        </a>
    </li>
{% endblock pricing_tab %}


{% block general_content %}
    {{ parent() }}
    {{ macros.show_categories(product) }}
    <div class="row">
        <div class="col-md-6">
            {{ macros.show_brand(product, {'label_col': 4}) }}
        </div>
        <div class="col-md-6">
            {{ macros.show_brandNaming(product, {'label_col': 4}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ macros.show_visible(product, {'label_col': 4}) }}
        </div>
        <div class="col-md-6">
            {{ macros.show_visibility(product, {'label_col': 4}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ macros.show_best_seller(product, {'label_col': 4}) }}
        </div>
        <div class="col-md-6">
            {{ macros.show_cross_selling(product, {'label_col': 4}) }}
        </div>
    </div>
    {{ macros.show_cross_sellings(product) }}
{% endblock general_content %}


{% block pricing_content %}
    {{ parent() }}
    {{ macros.show_bundle_composition(product) }}
{% endblock pricing_content %}
