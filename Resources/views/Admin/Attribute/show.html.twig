{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block actions %}{% endblock %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(attribute.group, 'show', {
        'label': 'ekyna_core.button.back',
        'icon': 'arrow-left',
        'theme': 'default',
    }) }}
    {{ admin_resource_btn(attribute, 'edit') }}
    {{ admin_resource_btn(attribute, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
        <li class="active">
            <a href="#attribute-general" id="toggle-general" data-toggle="tab">
                {{ 'ekyna_core.field.general'|trans }}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="attribute-general">
                {{ show_row(attribute.group, 'entity', {
                    'label': 'ekyna_product.attribute_group.label.singular',
                    'route': 'ekyna_product_attribute_group_admin_show',
                    'route_parameters_map': {'attributeGroupId': 'id'}
                }) }}
                {{ show_row(attribute.name, 'text', {
                    'label': 'ekyna_core.field.name'
                }) }}
                {{ show_row(attribute.translations, 'translations', {
                    'fields': {
                        'title': {'label': 'ekyna_core.field.title'},
                    }
                }) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(attribute.media, 'media', {
                            'label': 'ekyna_core.field.image',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(attribute.color, 'color', {
                            'label': 'ekyna_core.field.color',
                            'label_col': 4
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
