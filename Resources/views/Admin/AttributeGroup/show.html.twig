{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
    <div class="actions">
        {{ admin_resource_btn(attributeGroup, 'edit') }}
        {{ admin_resource_btn(attributeGroup, 'remove') }}
    </div>
    <div class="show show-with-tabs">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a>
            </li>
        </ul>
        <div class="show-body">
            <div class="tab-content">
                <div class="tab-pane active" id="general">
                    {{ show_row(attributeGroup.name, 'text', 'ekyna_core.field.email') }}
                    {{ show_translations_row(attributeGroup.translations, {
                        'fields': {
                            'title': {'label': 'ekyna_core.field.title'},
                        }
                    }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="sub-header">
        <h2>{{ 'ekyna_product.attribute.header.list'|trans|raw }}</h2>
    </div>
    <div class="actions">
        {{ admin_resource_btn('ekyna_product.attribute', 'new', {
            'path': path('ekyna_product_attribute_admin_new', {'attributeGroupId': attributeGroup.id})
        }) }}
    </div>
    {#{{ ekyna_table_render(attributes) }}#}


    <div class="ekyna-table">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>{{ 'ekyna_core.field.name'|trans }}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for attribute in attributeGroup.attributes %}
                <tr>
                    <td>
                        <a href="{{ admin_resource_path(attribute) }}">{{ attribute.name }}</a>
                    </td>
                    <td class="actions">
                        <a href="{{ admin_resource_path(attribute, 'edit') }}"
                           class="btn btn-xs btn-warning">
                            {{ 'ekyna_core.button.edit'|trans }}
                        </a>
                        <a href="{{ admin_resource_path(attribute, 'remove') }}"
                           class="btn btn-xs btn-danger">
                            {{ 'ekyna_core.button.remove'|trans }}
                        </a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>



{% endblock %}
