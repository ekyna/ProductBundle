{% extends '@EkynaAdmin/Entity/Crud/_form_default.html.twig' %}

{% block main_tabs -%}
    {{ parent() }}
    <li>
        <a href="#{{ resource_name }}-seo" id="toggle-seo" data-toggle="tab">
            {{ 'field.seo'|trans({}, 'EkynaUi') }}
        </a>
    </li>
{%- endblock main_tabs %}

{% block main_contents -%}
    <div class="tab-pane active" id="{{ resource_name }}-general">
        {{ form_row(form.name) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.visible, {'label_col': 4, 'widget_col': 8}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.visibility, {'label_col': 4, 'widget_col': 8}) }}
            </div>
        </div>
        {{ form_row(form.parent) }}
        {{ form_row(form.translations, {'label_col': 0, 'widget_col': 12}) }}
        {{ form_row(form.media) }}
    </div>
    <div class="tab-pane" id="{{ resource_name }}-seo">
        {{ form_row(form.seo) }}
    </div>
{%- endblock main_contents -%}
