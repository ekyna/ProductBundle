{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_product.category.header.show'|trans({'%name%': category})|raw }}</h1>
{% endblock %}

{% block actions %}
    {{ admin_resource_btn(category, 'list') }}
    {{ admin_resource_btn(category, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(category, 'edit') }}
    {{ admin_resource_btn(category, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#category-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a>
        </li>
        <li>
            <a href="#category-seo" data-toggle="tab">{{ 'ekyna_core.field.seo'|trans }}</a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="category-general">
                {{ show_row(category.name, 'text', 'ekyna_core.field.name') }}
                {# TODO parent #}
                {{ show_row(category.media, 'media', 'ekyna_core.field.image') }}
            </div>
            <div class="tab-pane" id="category-seo">
                {{ show_row(category.seo, 'seo') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
