{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_product.brand.header.show'|trans({'%name%': brand})|raw }}</h1>
{% endblock %}

{% block actions %}
    {{ admin_resource_btn(brand, 'list') }}
    {{ admin_resource_btn(brand, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(brand, 'edit') }}
    {{ admin_resource_btn(brand, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#brand-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a>
        </li>
        <li>
            <a href="#brand-seo" data-toggle="tab">{{ 'ekyna_core.field.seo'|trans }}</a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="brand-general">
                {{ show_row(brand.name, 'text', 'ekyna_core.field.name') }}
                {{ show_translations_row(brand.translations, {
                    'fields': {
                        'title': {'label': 'ekyna_core.field.title'},
                        'description': {
                            'label': 'ekyna_core.field.description',
                            'type': 'tinymce',
                            'content': path('ekyna_product_brand_admin_tinymce', {'brandId': brand.id}),
                            'options': {'height': 100}
                        }
                    }
                }) }}
                {{ show_row(brand.media, 'media', 'ekyna_core.field.image') }}
            </div>
            <div class="tab-pane" id="brand-seo">
                {{ show_row(brand.seo, 'seo') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
