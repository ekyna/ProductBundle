{% apply spaceless %}
<div style="margin:15px;">
{% set per_row = 3 %}
{% for pricing in pricings %}
{% if loop.first or loop.index0 % per_row == 0 %}<div class="row">{% endif %}
    <div class="col-md-{{ 12 / per_row }}">
        <div style="padding:15px;border:1px solid #ddd;border-radius:4px">
            {# TODO pricing groups ? #}
            <p>
                <strong>{{ 'brand.label.plural'|trans({}, 'EkynaProduct') }}:</strong>
                {% if pricing.brands is not empty -%}
                    {{ pricing.brands|join(', ') }}
                {%- else -%}
                    {{ 'account.pricing.all_brands'|trans({}, 'EkynaProduct') }}
                {%- endif %}
            </p>
            <table class="table table-condensed table-striped account-pricing-grid">
                <thead>
                <tr>
                    <th>{{ 'field.quantity'|trans({}, 'EkynaUi') }}</th>
                    <th class="text-right">{{ 'pricing_rule.field.discount'|trans({}, 'EkynaProduct') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for rule in pricing.rules -%}
                    <tr>
                        <td>
                            {% if rule.max is null -%}
                                {{ 'pricing_rule.field.from'|trans({
                                    '%min%': rule.min|format_number
                                }, 'EkynaProduct') }}
                            {%- else -%}
                                {{ 'pricing_rule.field.range'|trans({
                                    '%min%': rule.min|format_number, '%max%': rule.max|format_number
                                }, 'EkynaProduct') }}
                            {%- endif %}
                        </td>
                        <td class="text-right">{{ rule.percent|format_number }}%</td>
                    </tr>
                {%- endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% if loop.last or loop.index % per_row == 0 %}</div>{% endif %}
{% endfor %}
</div>
{% endapply %}
