{% extends theme %}

{% import '@EkynaProduct/Catalog/Template/macros.html.twig' as macros %}

{% block content -%}
{% apply spaceless -%}

{% for slot in page.slots|slice(0, 4) -%}
{% if loop.first or loop.index0 % 2 == 0 -%}
<div class="product dual">
    <div class="row">
{%- endif %}
        {% set product = slot.product -%}
        <div class="col-xs-6">
            <div class="inner">
                {{- macros.title(catalog, product) -}}
                <p class="image">
                    {{- macros.image(catalog, product) -}}
                </p>
                <div class="row">
                    <div class="col-xs-5">
                        {{- macros.infos(catalog, product) -}}
                    </div>
                    <div class="col-xs-7">
                        {{- macros.grid(catalog, product) -}}
                    </div>
                </div>
                <p class="description">
                    {{- product.description|paragraph_to_break -}}
                </p>
            </div>
        </div>
{% if loop.last or loop.index0 % 2 == 1 -%}
    </div>
</div>
{%- endif %}
{%- endfor %}
{%- endapply %}
{%- endblock content %}
