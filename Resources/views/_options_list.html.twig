<div class="row show-row">
    <div class="col-md-2 show-label">Options</div>
    <div class="col-md-10">
        {% for label, list in options %}
        <h5 style="line-height:34px;padding-left:16px;margin-bottom:10px;font-style:italic;">{{ label|trans }}</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>{{ 'ekyna_core.field.designation'|trans }}</th>
                        <th>{{ 'ekyna_core.field.reference'|trans }}</th>
                        <th>{{ 'ekyna_core.field.price'|trans }}</th>
                        <th>{{ 'ekyna_core.field.tax'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for opt in list %}
                    <tr>
                        <td>{{ opt.designation }}</td>
                        <td>{{ opt.reference }}</td>
                        <td>{{ opt.price }}</td>
                        <td>{{ opt.tax }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endfor %}
    </div>
</div>
